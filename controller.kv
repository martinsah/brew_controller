<Controller>:
	ctrl: tc
	
    BoxLayout:
        orientation: 'horizontal'
		BoxLayout:
			id: tc		
			orientation: 'vertical'
			BoxLayout:
				orientation: 'horizontal'
				Label:
					text: root.temp_text
					markup: True
				Label:
					text: '[b][size=30]TEMP'
					markup: True
			BoxLayout:
				orientation: 'horizontal'
				Label:
					id: label_set
					text: root.setpoint_text
					markup: True
				Label:
					text: '[b][size=30]SET'
					markup: True
			Button:
                id: b_control_button
				text: root.control_text
				markup: True
                on_press: root.btn_control()
			BoxLayout:
				orientation: 'horizontal'
				Button:
					id: btn_up
					text: '[b][size=30]Up'
					markup: True
					on_press: root.btn_up()
				Button:
					id: btn_down
					text: '[b][size=30]Down'
					markup: True
					on_press: root.btn_down()


		BoxLayout:
			orientation: 'vertical'
			Button:
				id: b_e
				text: root.enable_text
				markup: True
				on_press: root.btn_enable()
            Label:
                text: root.hlt_temp_text
                markup: True
            Label:
                text: root.mash_temp_text
                markup: True
            Label:
                text: root.hlt_pwm_text
                markup: True


